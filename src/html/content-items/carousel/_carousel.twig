<div class="offer-carousel">
    <div class="center">

        <div class="offer-carousel__tab-controls">
            <a href="#" class="offer-carousel__tab-control offer-carousel__heading" data-tab="1">
                <span>Most popular tours</span>
            </a>

            <a href="#" class="offer-carousel__tab-control offer-carousel__tab-control--active offer-carousel__heading" data-tab="2">
                <span>Best offers</span>
            </a>
        </div>

        <div class="controls control-tab-1 active">
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>

        <div class="controls control-tab-2">
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>

        <div class="offer-carousel__list">
            <div class="offer-carousel__tabs">
                <div class="offer-carousel__tab" data-tab="1">
                    <div class="offer-carousel__tab-content">
                        <div class="swiper-container">
                            <div class="swiper-wrapper">
                                {% for i in 1..10 %}
                                    <div class="swiper-slide">
                                        <div class="offer-carousel__item" style="background-image: url('https://placeimg.com/477/255/nature?{{i}}');">
                                            <div class="offer-carousel__item-content">
                                                <span class="offer-carousel__item-heading">Walking tour Old Town</span>
                                                <span class="offer-carousel__item-subline">During the tour you’ll walk along the narrow streets of the Medieval Hanseatic Old Town</span>
                                                <a href="/tour.html" class="offer-carousel__button sl-button sl-button--wide sl-button--color-yellow">Uzzināt vairāk</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                </div>

                <div class="offer-carousel__tab" data-tab="2">
                    <div class="offer-carousel__tab-content">
                        <div class="swiper-container">
                            <div class="swiper-wrapper">
                                {% for i in 1..4 %}
                                    <div class="swiper-slide">
                                        <a class="offer-carousel__item" style="background-image: url('https://placeimg.com/477/255/nature?{{i}}{{i}}');" href="#">
                                            <div class="offer-carousel__item-content">
                                                <span class="offer-carousel__item-heading">Walking tour Old Town</span>
                                                <span class="offer-carousel__item-subline">During the tour you’ll walk along the narrow streets of the Medieval Hanseatic Old Town</span>
                                                <span class="offer-carousel__button sl-button sl-button--wide sl-button--color-yellow">Uzzināt vairāk</span>
                                            </div>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>