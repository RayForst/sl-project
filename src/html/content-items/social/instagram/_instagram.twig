<div class="instagram">
    <div class="center">
        <div class="instagram__heading">Last from Instagram</div>
        <a href="#" class="instagram__hashtag">#smilelinewalkingtours</a>
        <div class="controls">
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
        <div class="instagram__list">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    {% for i in 1..14 %}
                        <div class="swiper-slide">
                            <a class="instagram__image-wrap" href="#">
                                <span class="instagram__image lazy" data-src="https://placeimg.com/768/768/arch?v={{i}}"></span>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>